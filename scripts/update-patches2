PATCH_LIST='patch-* *.patch'
CURDIR=$PWD
export CURDIR PATCH_LIST

rm -f patches/*.new
mksh "${TOPDIR}"/scripts/update-patches |&
first=1
set -A toedit
while IFS= read -p -d '' -r; do
	if (( first )); then
		if [[ $REPLY = FAIL ]]; then
			rm -rf "${WRKDIR1}.orig"
			exit 1
		fi
		first=0
	fi
	toedit+=("$REPLY")
done
if (( !first )); then
	print -n 'edit patches: '
	read
	cd patches
	${VISUAL:-${EDITOR:-vi}} "${toedit[@]}"
	cd ..
fi
rm -rf "${WRKDIR1}.orig"
exit 0
