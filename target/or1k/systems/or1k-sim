	bool "OR1K Simulator"
	select ADK_CPU_OR1K
	select ADK_TARGET_WITH_SERIAL
	select ADK_TARGET_WITH_NET
	select ADK_TARGET_KERNEL_VERSION_GIT
	select ADK_TARGET_KERNEL_REPO "https://github.com/openrisc/linux.git"
