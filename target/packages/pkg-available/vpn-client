	bool "Compile a OpenVPN client system"
	default n
	select ADK_PACKAGE_OPENVPN
	select ADK_PACKAGE_OPENVPN_WITH_LZO
	select ADK_PACKAGE_OPENVPN_WITH_MANAGEMENT
