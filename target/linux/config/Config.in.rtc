	select ADK_KERNEL_RTC_INTF_DEV
	default y if ADK_TARGET_SYSTEM_SHARP_ZAURUS
	default n
	depends on ADK_TARGET_SYSTEM_SHARP_ZAURUS
	help
	  Sharp Zaurus RTC.

config ADK_KERNEL_RTC_DRV_AT91SAM9
