	boolean
	select ADK_KERNEL_RTC_CLASS
	select ADK_KERNEL_RTC_HCTOSYS
	select ADK_KERNEL_RTC_INTF_DEV
	default y if ADK_TARGET_SYSTEM_ACMESYSTEMS_FOXG20
	default n
