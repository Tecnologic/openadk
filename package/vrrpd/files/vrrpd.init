#!/bin/sh
#FWINIT 70
. /etc/rc.conf

case $1 in
autostop) ;;
	autostart)
		test x"${vrrpd:-NO}" = x"NO" && exit 0
		exec sh $0 start
		;;
	start)
		vrrpd $vrrpd_flags
		;;
	stop)
		killall vrrpd
		;;
	restart)
		sh $0 stop
		sh $0 start
		;;
	 *)
		echo "usage: $0 {start | stop | restart}"
		exit 1
esac
exit $?
