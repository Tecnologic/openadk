#!/bin/sh
#PKG monit
#INIT 10

. /etc/rc.conf

case $1 in
autostop) ;;
autostart)
	test x"${monit:-NO}" = x"NO" && exit 0
	exec sh $0 start
	;;
start)
	monit $monit_flags
	;;
stop)
	pkill monit	
	;;
restart)
	sh $0 stop
	sh $0 start
	;;
*)
	echo "usage: $0 (start|stop|restart)"
	exit 1
esac
exit $?
