#!/bin/sh
#PKG dansguardian
#INIT 80

. /etc/rc.conf

case $1 in
autostop) ;;
autostart)
	test x"${dansguardian:-NO}" = x"NO" && exit 0
	exec sh $0 start
	;;
start)
	dansguardian
	;;
stop)
	killall dansguardian
	;;
restart)
	sh $0 stop
	sh $0 start
	;;

*)
	echo "usage: $0 {start | stop | restart}"
	exit 1
esac
exit $?
