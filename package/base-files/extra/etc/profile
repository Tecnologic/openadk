export PATH=/bin:/sbin:/usr/bin:/usr/sbin
if [[ $(id -u) = 0 ]]; then
	export PS1='# '
else
	export PS1='$ '
fi
export HOME=/tmp
cat /etc/banner 2>&-
[ -x /usr/bin/less ] || alias less=more
[ -x /usr/bin/vim ] || alias vim=vi
[ -x /usr/bin/arp ] || arp() { cat /proc/net/arp; }
[ -x /usr/bin/ldd ] || ldd() { LD_TRACE_LOADED_OBJECTS=1 /lib/ld.so "$@"; }
