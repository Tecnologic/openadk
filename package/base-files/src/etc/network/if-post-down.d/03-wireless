#!/bin/sh
set -e 

[ "${IFACE%%[0-9]*}" = "wlan" ] || exit 0

case "$IF_WIRELESS_MODE" in
	ap)
		logger -t hostap "Killing hostapd"
		pkill hostapd
		;;
	sta)
		[ "$IF_WIRELESS_SECURITY" != "none" ] && {
			logger -t wireless "Killing wpa_supplicant"
			kill -9 $(cat /var/run/wpa_supplicant.pid)
		}
		;;
	*)
		exit 0
		;;
esac
exit 0
