#!/bin/sh
#PKG rrdcollect
#INIT 90

. /etc/rc.conf

case $1 in
autostop) ;;
autostart)
	test x"${rrdcollect:-NO}" = x"NO" && exit 0
	exec sh $0 start
	;;
start)
	[ -d /var/lib/rrdcollect ] || mkdir -p /var/lib/rrdcollect
	rrdcollect
	;;
stop)
	pkill rrdcollect
	;;
restart)
	sh $0 stop
	sh $0 start
	;;
*)
	echo "Usage: $0 {start | stop | restart}"
	exit 1
	;;
esac
exit $?
