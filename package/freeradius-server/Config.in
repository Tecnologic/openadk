config ADK_PACKAGE_FREERADIUS_SERVER
	prompt "freeradius-server................. Flexible RADIUS server"
	tristate
	default n
	select ADK_PACKAGE_LIBLTDL
	select ADK_PACKAGE_LIBOPENSSL
	select ADK_PACKAGE_LIBPTHREAD
