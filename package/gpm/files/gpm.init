#!/bin/sh
#PKG gpm
#INIT 80

. /etc/rc.conf

case $1 in
autostop) ;;
autostart)
	test x"${gpm:-NO}" = x"NO" && exit 0
	exec sh $0 start
	;;
start)
	/usr/sbin/gpm $gpm_flags
	;;
stop)
	kill $(pgrep -f /usr/sbin/gpm)
	;;
restart)
	sh $0 stop
	sh $0 start
	;;
*)
	echo "Usage: $0 {start | stop | restart}"
	exit 1
	;;
esac
exit $?
