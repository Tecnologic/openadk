#!/bin/sh
#FWINIT 60
. /etc/rc.conf

case $1 in
autostop) ;;
autostart)
	test x"${htpdate:-NO}" = x"NO" && exit 0
	exec sh $0 start
	;;
start)
	htpdate -l -s -t $htpdate_flags && htpdate -D $htpdate_flags
	;;
stop)
	killall htpdate
	;;
restart)
	sh $0 stop
	sh $0 start
	;;
*)
	echo "usage: $0 {start | stop | restart}"
	exit 1

esac
exit $?
