#!/bin/sh
#FWINIT 15

. /etc/rc.conf 

case $1 in
autostop) ;;
autostart)
	test x"${watchdog:-NO}" = x"NO" && exit 0
	exec sh $0 start
	;;
start)
	/usr/sbin/watchdog
	;;
stop)
	killall watchdog
  	;;
restart)
	sh $0 stop
	sh $0 start
	;;
*)
	echo "usage: $0 { start | stop | restart }"
	exit 1
	;;
esac
exit $?
