#!/bin/sh
#FWINIT 60
. /etc/rc.conf

case $1 in
autostop) ;;
autostart)
	test x"${portmap:-NO}" = x"NO" && exit 0
	exec sh $0 start
	;;
start)
	mkdir -p /tmp/.portmap
	portmap -t /tmp/.portmap
	;;
stop)
	kill $(pidof portmap|cut -d ' ' -f 3)
	;;
restart)
	sh $0 stop
	sh $0 start
	;;
*)
	echo "Usage: $0 {start | stop | restart}"
	exit 1
	;;
esac
exit $?
