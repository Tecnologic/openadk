#!/bin/sh
#PKG xinetd
#INIT 50

. /etc/rc.conf

case $1 in
autostop) ;;
autostart)
	test x"${xinetd:-NO}" = x"NO" && exit 0
	exec sh $0 start
	;;
start)
	/usr/sbin/xinetd
	;;
stop)
	kill $(pgrep -f /usr/sbin/xinetd)
	;;
restart)
	sh $0 stop
	sh $0 start
	;;
*)
	echo "Usage: $0 {start | stop | restart}"
	exit 1
	;;
esac
exit $?
