#!/bin/sh
#FWINIT 75
. /etc/rc.conf

case $1 in
autostop) ;;
autostart)
	test x"${snort_wireless:-NO}" = x"NO" && exit 0
	exec sh $0 start
	;;
start)
	[ -d /var/log/snort ] || mkdir -p /var/log/snort
	snort ${snort_wireless_flags}
	;;
stop)
	killall snort
	;;
restart)
	sh $0 stop
	sh $0 start
	;;
*)
	echo "Usage: $0 {start | stop | restart}"
	exit 1
	;;
esac
exit $?
