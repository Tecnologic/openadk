#!/bin/sh
#PKG pppoe-server
#INIT 50
. /etc/rc.conf

case $1 in
autostop) ;;
autostart)
	test x"${pppoe_client:-NO}" = x"NO" && exit 0
	exec sh $0 start
	;;
start)
	adsl-start
	;;
stop)
	adsl-stop
	;;
restart)
	sh $0 stop
	sh $0 start
	;;
*)
	echo "Usage: $0 {start | stop | restart}"
	exit 1
	;;
esac
exit $?
