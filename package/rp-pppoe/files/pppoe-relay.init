#!/bin/sh
#FWINIT 50
. /etc/rc.conf

case $1 in
autostop) ;;
autostart)
	test x"${pppoe_relay:-NO}" = x"NO" && exit 0
	exec sh $0 start
	;;
start)
	pppoe-relay $pppoe_relay_flags
	;;
stop)
	killall pppoe-relay
	;;
restart)
	sh $0 stop
	sh $0 start
	;;
*)
	echo "Usage: $0 {start | stop | restart}"
	exit 1
	;;
esac
exit $?
