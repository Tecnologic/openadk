#!/bin/sh
#PKG proftpd
#INIT 60
. /etc/rc.conf

case $1 in
autostop) ;;
autostart)
	test x"${proftpd:-NO}" = x"NO" && exit 0
	exec sh $0 start
	;;
start)
	[ -f /etc/proftpd.conf ] || exit
	/usr/sbin/proftpd
	;;
stop)
	kill $(pgrep -f /usr/sbin/proftpd)
	;;
restart)
	sh $0 stop
	sleep 1
	sh $0 start
	;;
*)
	echo "Usage: $0 {start | stop | restart}"
	exit 1
	;;
esac
exit $?
