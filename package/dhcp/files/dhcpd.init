#!/bin/sh
#PKG dhcp-server
#INIT 60
. /etc/rc.conf

case $1 in
autostart)
	[[ $dhcpd_flags = NO ]] && exit 0
	exec sh $0 start
	;;
start)
	mkdir -p /var/state/dhcp
	touch /var/state/dhcp/dhcpd.leases
	dhcpd $dhcpd_flags
	;;
autostop|stop)
	pkill dhcpd
	;;
restart)
	sh $0 stop
	sh $0 start
	;;
*)
	echo "Usage: $0 {start | stop | restart}"
	exit 1
	;;
esac
exit $?
