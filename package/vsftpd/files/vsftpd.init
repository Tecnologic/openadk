#!/bin/sh
#PKG vsftpd
#INIT 70

. /etc/rc.conf

case $1 in
autostop) ;;
autostart)
	test x"${vsftpd:-NO}" = x"NO" && exit 0
	exec sh $0 start
	;;
start)
	[ -d /var/run/vsftpd ] || mkdir -p /var/run/vsftpd
	vsftpd
  	;;
stop)
	pkill vsftpd
	;;
restart)
	sh $0 stop
	sh $0 start
	;;
*)
	echo "usage: $0 {start | stop | restart}"
	;;
esac
exit $?
