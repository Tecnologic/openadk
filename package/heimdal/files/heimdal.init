#!/bin/sh
#FWINIT 70
. /etc/rc.conf

case $1 in
autostop) ;;
autostart)
	test x"${kdc:-NO}" = x"NO" && exit 0
	exec sh $0 start
	;;
start)
	/usr/sbin/kdc
	/usr/sbin/kadmind &
	/usr/sbin/kpasswdd &
	;;
stop)
	killall kdc
	killall kadmind
	killall kpasswdd
	;;
restart)
	sh $0 stop
	sh $0 start
	;;
*)
	echo "Usage: $0 {start | stop | restart}"
	exit 1
	;;
esac
exit $?
