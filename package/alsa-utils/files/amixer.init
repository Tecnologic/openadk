#!/bin/sh
#FWINIT 60
. /etc/rc.conf

case $1 in
autostop) ;;
autostart)
	test x"${amixer:-NO}" = x"NO" && exit 0
	exec sh $0 start
	;;
start)
	amixer set Master on
	amixer set PCM on
	amixer set Master 75%
	amixer set PCM 75%
	;;
stop)
	amixer set Master off
	amixer set PCM off
	;;
restart)
	sh $0 stop
	sh $0 start
	;;
*)
	echo "Usage: $0 {start | stop | restart}"
	exit 1
	;;
esac
exit $?
