#!/bin/sh
#PKG alsa-utils
#INIT 60
. /etc/rc.conf

case $1 in
autostop) ;;
autostart)
	test x"${amixer:-NO}" = x"NO" && exit 0
	exec sh $0 start
	;;
start)
	amixer set $amixer_mixer on
	amixer set $amixer_mixer $amixer_volume
	;;
stop)
	amixer set $amixer_mixer off
	;;
restart)
	sh $0 stop
	sh $0 start
	;;
*)
	echo "Usage: $0 {start | stop | restart}"
	exit 1
	;;
esac
exit $?
