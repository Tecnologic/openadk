#!/bin/sh
#PKG rarpd
#INIT 60

. /etc/rc.conf

case $1 in
autostop) ;;
autostart)
	test x"${rarpd:-NO}" = x"NO" && exit 0
	exec sh $0 start
	;;
start)
	/usr/sbin/rarpd $rarpd_flags
	;;
stop)
	kill $(pgrep -f /usr/sbin/rarpd)
	;;
restart)
	sh $0 stop
	sh $0 start
	;;
*)
	echo "usage: $0 {start | stop | restart}"
	exit 1
esac
exit $?
