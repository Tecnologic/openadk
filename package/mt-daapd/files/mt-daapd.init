#!/bin/sh
#PKG mt-daapd
#INIT 75

. /etc/rc.conf

case $1 in
autostop) ;;
autostart)
	[[ $mt_daapd = NO ]] && exit 0
	exec sh $0 start
	;;
start)
	/usr/sbin/mt-daapd
	;;
stop)
	kill $(pgrep -f /usr/sbin/mt-daapd)
	;;
restart)
	sh $0 stop
	sh $0 start
	;;
*)
	echo "Usage: $0 {start | stop | restart}"
	exit 1
	;;
esac
exit $?
