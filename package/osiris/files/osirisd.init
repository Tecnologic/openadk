#!/bin/sh
#PKG osirisd
#INIT 75

. /etc/rc.conf

case $1 in
autostop) ;;
autostart)
	test x"${osirisd:-NO}" = x"NO" && exit 0
	exec sh $0 start
	;;
start)
	[ -d /var/lib/osiris ] || mkdir -p /var/lib/osiris
	/usr/sbin/osirisd
	;;
stop)
	kill $(pgrep -f /usr/sbin/osirisd)
	;;
restart)
	sh $0 stop
	sh $0 start
	;;
*)
	echo "Usage: $0 {start | stop | restart}"
	exit 1
	;;
esac
exit $?
