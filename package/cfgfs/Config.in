config ADK_PACKAGE_CFGFS
	prompt "cfgfs................................ compressed config filesystem"
	tristate
	select BUSYBOX_COMM
	select BUSYBOX_MD5SUM
	select BUSYBOX_XARGS
	select BUSYBOX_FEATURE_SORT_BIG
	select ADK_PACKAGE_MTD
	depends on \
		ADK_LINUX_X86_ALIX1C || \
		ADK_LINUX_X86_ALIX2D || \
		ADK_LINUX_X86_WRAP || \
		ADK_LINUX_CRIS_FOXBOARD || \
		ADK_LINUX_MIPS_AG241 || \
		ADK_LINUX_MIPS_RB532
	default y
	help
	  Compressed config filesystem for /etc.
	  This makes smooth updates of your embedded device possible.
	  (Adopted from FreeWRT fwcf)
