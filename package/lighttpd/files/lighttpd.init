#!/bin/sh
#PKG lighttpd
#INIT 60

. /etc/rc.conf

case $1 in
autostop) ;;
autostart)
	test x"${lighttpd:-NO}" = x"NO" && exit 0
	exec sh $0 start
	;;
start)
	lighttpd $lighttpd_flags
	;;
stop)
	pkill lighttpd
	;;
restart)
	sh $0 stop
	sh $0 start
	;;
*)
	echo "usage: $0 {start | stop | restart}"
	exit 1
esac
exit $?
