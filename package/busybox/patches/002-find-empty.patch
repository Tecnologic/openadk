+#if ENABLE_FEATURE_FIND_EMPTY
+ACTF(empty)
+{
+	DIR *d;
+	struct dirent *dp;
+	bool empty = TRUE;
+
+	if (S_ISDIR(statbuf->st_mode)) {
+		d = opendir(fileName);
+		if (d == NULL)
+			bb_simple_perror_msg(fileName);
+		for (dp = readdir(d); dp; dp = readdir(d)) {
+			if (dp->d_name[0] != '.' ||
+				(dp->d_name[1] != '\0' &&
+				(dp->d_name[1] != '.' ||
+				dp->d_name[2] != '\0'))) {
+					empty = FALSE;
+					break;
+			}
+		}
+		closedir(d);
+		return(empty);
+	} else if (S_ISREG(statbuf->st_mode))
+		return (statbuf->st_size == 0);
+	else
+		return FALSE;
