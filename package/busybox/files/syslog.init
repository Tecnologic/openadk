#!/bin/sh
#PKG busybox
#INIT 05
. /etc/rc.conf

case $1 in
autostop) ;;
autostart)
	test x"${syslogd_flags:-NO}" = x"NO" && exit 0
	exec sh $0 start
	;;
start)
	/sbin/syslogd $syslogd_flags
	/sbin/klogd
	;;
stop)
	kill $(pgrep -f /sbin/klogd)
	kill $(pgrep -f /sbin/syslogd)
	;;
restart)
	sh $0 stop
	sh $0 start
	;;
*)
	echo "Usage: $0 {start | stop | restart}"
	exit 1
	;;
esac
exit $?
