#!/bin/sh
#PKG esound
#INIT 75
. /etc/rc.conf

case $1 in
autostop) ;;
autostart)
	test x"${esd:-NO}" = x"NO" && exit 0
	exec sh $0 start
	;;
start)
	# start as another user via: su - mpd -c 'esd ..'
	esd -public -tcp -nobeeps -noterminate &
	;;
stop)
	pkill esd
	;;
restart)
	sh $0 stop
	sh $0 start
	;;
*)
	echo "Usage: $0 {start | stop | restart}"
	;;
esac
exit 0
