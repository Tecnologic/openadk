#!/bin/sh
#PKG mini-httpd
#INIT 60

. /etc/rc.conf

case $1 in
autostop) ;;
autostart)
	[[ $mini_httpd_flags = NO ]] && exit 0
	exec sh $0 start
	;;
start)
	/usr/sbin/mini_httpd $mini_httpd_flags
	;;
stop)
	kill $(pgrep -f /usr/sbin/mini_httpd)
	;;
restart)
	sh $0 stop
	sh $0 start
	;;
*)
	echo "usage: $0 {start | stop | restart}"
	exit 1
esac
exit $?
