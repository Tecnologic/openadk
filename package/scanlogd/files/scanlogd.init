#!/bin/sh
#PKG scanlogd
#INIT 60

. /etc/rc.conf

case $1 in
autostop) ;;
autostart)
	test x"${scanlogd:-NO}" = x"NO" && exit 0
	exec sh $0 start
	;;
start)
	mkdir -p `grep "^scanlogd:" /etc/passwd | cut -d: -f6`
	scanlogd $scanlogd_flags
	;;
stop)
	killall scanlogd
	;;
restart)
	sh $0 stop
	sh $0 start
	;;
*)
	echo "usage: $0 {start | stop | restart}"
	exit 1
esac
exit $?
