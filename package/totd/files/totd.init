#!/bin/sh
#PKG totd
#INIT 60
. /etc/rc.conf

case $1 in
autostop) ;;
autostart)
	test x"${totd:-NO}" = x"NO" && exit 0
	exec sh $0 start
	;;
start)
	totd $totd_flags -c /etc/totd.conf
	;;
stop)
	pkill totd
	;;
restart)
	sh $0 stop
	sh $0 start
	;;
*)
	echo "Usage: $0 {start | stop | restart}"
	;;
esac
exit $?
